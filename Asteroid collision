class Solution {
public:
    vector<int> asteroidCollision(vector<int>& asteroids) {
        vector<int> st;
        int n = asteroids.size();

        for (int i = 0; i < n; i++) {
            int curr = asteroids[i];

            // Only collision if current asteroid is negative and top of stack is positive
            if (curr > 0) {
                st.push_back(curr);
            } else {
                while (!st.empty() && st.back() > 0 && st.back() < abs(curr)) {
                    st.pop_back(); // smaller positive asteroid destroyed
                }

                if (!st.empty() && st.back() == abs(curr)) {
                    st.pop_back(); // both destroyed
                } else if (st.empty() || st.back() < 0) {
                    st.push_back(curr); // push negative asteroid if no collision
                }
            }
        }
        return st;
    }
};
