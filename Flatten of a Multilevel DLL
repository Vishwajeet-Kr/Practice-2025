class Solution {
public:
    Node* flatten(Node* head) {
        if(head == nullptr) return head;

        Node* curr = head;
        while(curr != NULL) {
            if(curr->child != NULL) {
                //flatten the child nodes
                Node* next = curr->next;
                curr->next = flatten(curr->child);

                curr->next->prev = curr;
                curr->child = nullptr;

                //find tail
                while(curr->next != nullptr) {
                    curr = curr->next;
                }

                //attach tail with next ptr
                if(next != nullptr) {
                    curr->next = next;
                    next->prev = curr;
                }
            }
            curr = curr->next;
        }
        return head;
    }
};
